@model DepartmentCreateRequest
@{
    ViewData["Title"] = "Create department";
}

<h1>Create Department</h1>

@using (Html.BeginForm("Create", "Department", null, FormMethod.Post, true, null))
{
    <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            @Html.TextBox("Name","", new {@class="form-control", title="Name"})
            @Html.ValidationMessage("Name", new {@class="text-danger"})
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-12">
            <button 
                type="button" 
                class="btn btn-secondary" 
                onclick="location.href='@Url.Action("Index", "Department")'">
                Cancel

            </button>
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}
